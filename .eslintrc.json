{
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "extends": [ "eslint:recommended" ],
    "parser": "babel-eslint",
    "rules": {
        "prefer-const": [ 
            "error",
            {
              "destructuring": "any",
              "ignoreReadBeforeAssign": false
            }
        ],
        "no-var": ["error"],
        "no-unused-vars": ["warn"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "brace-style": [
            "error",
            "allman",
            { "allowSingleLine": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": ["warn"],
        "array-bracket-spacing": ["error", "always"],
        "arrow-body-style": ["error", "always"]
    }
}