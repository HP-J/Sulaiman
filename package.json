{
  "name": "sulaiman",
  "productName": "Sulaiman",
  "version": "0.1.1",
  "description": "A keyboard launcher with no features",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "npx babel src --out-dir compiled --copy-files --source-maps --watch",
    "compile": "npx babel src --out-dir compiled --copy-files --no-comments --minified && rm -rf ./compiled/extensions/sulaiman-extension-debug",
    "clean": "rm -rf compiled",
    "patch": "npm version patch --no-git-tag-version"
  },
  "build": {
    "appId": "com.herpproject.sulaiman",
    "afterPack": "afterPack.js",
    "asar": false,
    "files": [
      "index.js",
      "build.json",
      "LICENSE",
      "README.md",
      "CHANGELOG.md",
      "tray.png"
    ],
    "directories": {
      "output": "./public"
    },
    "linux": {
      "artifactName": "Sulaiman.${ext}",
      "executableName": "Sulaiman",
      "category": "Utility"
    },
    "nsis": {
      "artifactName": "Sulaiman-Setup.exe",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Sulaiman",
      "shortcutName": "Sulaiman"
    }
  },
  "homepage": "https://gitlab.com/herpproject/Sulaiman",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/herpproject/Sulaiman.git"
  },
  "author": "Herp Project <herpproject0@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-dl": "^1.12.0",
    "electron-json-config": "^1.5.3",
    "fs-extra": "^7.0.0",
    "inly": "^3.0.2",
    "npm": "^6.4.1",
    "request-promise-native": "^1.0.5",
    "vm2": "^3.6.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-eslint": "^10.0.1",
    "electron": "^3.0.6",
    "electron-builder": "^20.28.4",
    "eslint": "^5.8.0"
  }
}
