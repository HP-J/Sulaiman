{
  "name": "sulaiman",
  "productName": "Sulaiman",
  "version": "0.1.0",
  "description": "A keyboard launcher with no features",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "npx babel src --out-dir compiled --presets @babel/preset-env --copy-files --source-maps --watch",
    "compile": "npx babel src --out-dir compiled --presets @babel/preset-env --copy-files --no-comments --minified && rm -rf ./compiled/extensions/sulaiman-extension-debug",
    "clean": "rm -r compiled",
    "test": "eslint src && nyc mocha --require @babel/register --require @babel/polyfill",
    "pre-release": "npm version patch --no-git-tag-version && npm run clean"
  },
  "build": {
    "appId": "com.herpproject.sulaiman",
    "asar": false,
    "files": [
      "!.*",
      "!src",
      "!test",
      "!coverage"
    ],
    "directories": {
      "output": "public"
    },
    "linux": {
      "category": "Utility"
    },
    "appImage": {
      "artifactName": "Sulaiman.AppImage"
    },
    "nsis": {
      "artifactName": "Sulaiman-Setup.exe",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Sulaiman",
      "shortcutName": "Sulaiman"
    }
  },
  "homepage": "https://gitlab.com/herpproject/Sulaiman",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/herpproject/Sulaiman.git"
  },
  "author": "Herp Project",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^7.0.0",
    "inly": "^2.0.2",
    "node-wget-promise": "^0.1.6",
    "npm": "^6.4.1",
    "request-promise-native": "^1.0.5",
    "vm2": "^3.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-strict-mode": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "electron": "^3.0.0-beta.10",
    "electron-builder": "^20.28.3",
    "eslint": "^5.5.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1"
  }
}
